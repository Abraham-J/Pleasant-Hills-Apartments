<link rel = "stylesheet" href = "/css/apartment-details.css" type = "text/css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/apartment-details.js"></script>
<div>
    {{#if mainMessage}}
    <h1>{{mainMessage}}</h1>
    {{/if}}
</div>

<div class="row">
    {{#each apartment}}
    <div class="col">
        <img src="{{this.aptImg}}" width="320" height = "214">
    </div>
    <div class="col">
        <ul>
            <li>Apartment Number: {{this.aptNumber}}</li>
            <li>Number of Bedrooms: {{this.numBeds}}</li>
            <li>Number of Bathrooms: {{this.numBath}}</li>
            <li>Date Available: {{this.dateAvailable}}</li>
            <li>Rent: {{rent}}</li>
            {{/each}}
            <li>Amenities:
                <ul>
                    {{#each amenities}}
                    <li>{{this.amenDescription}}</li>
                    {{/each}}
                </ul>
            </li>
        </ul>
    </div>
</div>

