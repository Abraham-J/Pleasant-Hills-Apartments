<link rel = "stylesheet" href = "/css/tech.css" type = "text/css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/tech.js"></script>

<div>
    <h1>{{mainMessage}}</h1>
</div>
    <form class = "filterOrders">
        <input list="status" name="status" placeholder="Filter by Status">
        <datalist id="status">
            <option value="Not Started"></option>
            <option value="In Progress"></option>
            <option value="Completed"></option>
        </datalist>
        <button type="submit">Filter</button>
    </form>
<div class="row">
    <table>
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Apartment Number</th>
                <th>Issue Description</th>
                <th>Date Submitted</th>
                <th>Date Completed</th>
                <th>Status</th>
                {{!-- <th>Status</th> --}}
                <th>Add Details</th>
            </tr>
        </thead>
        <tbody id = "workOrders">
            {{#each work_orders}}
            <tr id="{{this.id}}">
                <td>{{id}}</td>
                <td>{{aptNum}}</td>
                <td>{{wkOrdDescription}}</td>
                <td>{{wkOrdDateSubmitted}}</td>
                <td>{{wkOrdDateCompleted}}</td>
                <td>{{wkOrdStatus}}</td>
                <td>
                    <form>
                        <input type="radio" name="status" value="unaddressed" id="unaddressed" default>
                        <label for="status"> Unaddressed </label><br>
                        <input type="radio" name="status" value="inprogress" id="inprogress">
                        <label for="status"> Technician Sent Out </label><br>
                        <input type="radio" name="status" value="complete" id="complete">
                        <label for="status"> Completed (will remove upon setting to complete)</label><br>
                    </form>
                </td>                    
                </td>
                <td><input type = "button" name = "details" value = "View Details"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
