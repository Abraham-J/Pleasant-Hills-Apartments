<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/apartment.js"></script>
<div>
    <h1>{{mainMessage}}</h1>
</div>
<div>
    
    <form class = "filterApartments">
        <div class="container">
            <div class="row">
                <div class="col">
                    Rent
                    <input type="number" id="rentMin" name="rentMin" min="0" max="10000" placeholder="MINIMUM"> -
                    <input type="number" id="rentMax" name="rentMax" min="0" max="10000" placeholder="MAXIMUM"> 
                </div>
                <div class="col">
                    Beds
                    <input type="number" id="bedMin" name="bedMin" min="0" max="10" placeholder="MINIMUM"> -
                    <input type="number" id="bedMax" name="bedMax" min="0" max="10" placeholder="MAXIMUM"> 
                </div>
                <div class="col">
                    Baths
                    <input type="number" id="bathMin" name="bathMin" min="1" max="10" placeholder="MINIMUM"> -
                    <input type="number" id="bathMax" name="bathMax" min="1" max="10" placeholder="MAXIMUM"> 
                </div>
                <div class="col">
                    <button type="submit">Filter</button>
                </div>
            </div>
        </div>
    </form>

    <table>
        <tr>
            <th>Apartment Number</th>
            <th>Number of Bedrooms</th>
            <th>Number of Bathrooms</th>
            <th>Date Available</th>
            <th>Rent</th>
            <th>More Info</th>
            <th>Schedule a Viewing</th>
        </tr>  
        <tr>
            <td>123</td>
