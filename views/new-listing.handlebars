<link rel = "stylesheet" href = "/css/newListing.css" type = "text/css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/newListing.js"></script>

<h5>Add Listing:</h5>
<form id = "addListing" action = "/newListing" method = "post">
    <label for = "aptNumber">Apartment Number:</label>
        <input type = "number" name = "aptNumber" min = "1" max= "9999">
    <label for = "rent">Rent:</label>
        <input type = "number" name = "rent" min = "1" max= "9999">
    <label for = "rent">Beds:</label>
        <input type = "number" name = "numBeds" min = "0" max= "10">
    <label for = "rent">Baths:</label>
        <input type = "number" name = "numBaths" min = "1" max= "10">
    <label for = "dateAvail">Date Available:</label>
        <input type = "date" name = "dateAvail">
    <input list="availStatus" name="availStatus" placeholder="Select Availability">   
        <datalist id="availStatus">
            <option value="Available"></option>
            <option value="Rented"></option>
        </datalist>
    <select multiple size="4" name="amenities">
        {{#each amenities}}
        <option value="{{amenID}}">{{amenDescription}}</option>
        {{/each}}
    </select>
    <button type="submit">Create Listing</button>
</form>
