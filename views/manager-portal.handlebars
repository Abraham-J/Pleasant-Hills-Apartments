<h3 class="hideContentTxt" id="manPeopleTxt">Manage People</h3>
<div class="hiddenContent" class="col-*-*" id="peopleContent">
        <h4 class="hideContentTxt" id="manCustomerTxt">Manage Customers</h4>
        <div class="hiddenContent" id="custContent">
            <form class = "filterCustomers">
                <input list="custType" name="custType" placeholder="Filter by Type of Customer">
                <datalist id="custType">
                    <option value="Tenant"></option>
                    <option value="Prospective"></option>
                </datalist>
                <button type="submit">Filter</button>
            </form>
            <table>
                <thead>
                    <tr >
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="allCustomers">
                    {{#each customers}}
                    <tr id="{{custID}}">
                        <form class="saveCustomer">
                            <td><input type="text" value="{{custFName}}" name="custFName" required></td>
                            <td><input type="text" value="{{custLName}}" name="custLName" required></td>
                            <td><input type="email" value="{{custEmail}}" name="custEmail" required></td>
                            <td><input type="number" value="{{custPhone}}" name="custPhone" pattern="[0-9]{10}|[0-9]{3}-[0-9]{3}-[0-9]{4}"></td>
                            <td><input type="text" value="{{rentStatus}}" name="rentStatus" required></td>
                            <td><button type="submit" class="save"><img src="/icons/save.png" height="24" width="24"></button></td>
                        </form>
                        <td><button class="deleteCustomer" type="submit"><img src="/icons/delete.png" height="24" width="24"></button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        <h4 class="hideContentTxt" id="manTechTxt">Manage Technicians</h4>
        <div class="hiddenContent" id="techContent">
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody id="allTechnicians">
                    {{#each technicians}}
                    <tr id="{{this.techID}}">
                        <form class="saveTechnican">
                            <td><input type="text" value="{{techFName}}" name="techFName" required></td>
                            <td><input type="text" value="{{techLName}}" name="techLName" required></td>
                            <td><input type="email" value="{{techEmail}}" name="techEmail" required></td>
                            <td><input type="number" value="{{techPhone}}" name="techPhone" pattern="[0-9]{10}|[0-9]{3}-[0-9]{3}-[0-9]{4}" required></td>
                            <td><button type="submit" class="save"><img src="/icons/save.png" height="24" width="24"></button></td>
                        </form>
                        <td><button class="deleteTechnician" type="submit"><img src="/icons/delete.png" height="24" width="24"></button></td>
                    </tr>
                    {{/each}}
                </tbody>
                {{!-- <tr>
                    <td>
                        <a href="/new-technician">Add Technician</a>
                    </td>
                </tr> --}}
            </table>
        </div>

</div>



