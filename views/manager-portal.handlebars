<link rel = "stylesheet" href = "/css/manager.css" type = "text/css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/manager.js"></script>

<div>
    <h1>{{mainMessage}}</h1>
</div>

<div>
    <h3>Manage Listings</h3>
    <form class = "filterListings">
    <input list="status" name="status" placeholder="Filter by Status">
    <datalist id="status">
        <option value="Available"></option>
        <option value="Unavailable"></option>
    </datalist>
    <button type="submit">Filter</button>
    </form>
    <table>
        <tr>
            <th>Apartment Number</th>
            <th>Apartment Status</th>
            <th>Change Status</th>
        </tr>
        <tr>
            <td>123</td>
            <td>Available</td>
            <td>
                <form class = "aptStatus">
                    <input type="radio" name="aptStatus" value="available" id = "available">
                    <label for = "aptStatus">Available</label></br>
                    <input type = "radio" name = "aptStatus" value = "rented" id = "rented">
                    <label for = "aptStatus">Rented</label>
                    <input type = "radio" name = "aptStatus" value = "delete" id = "delete">
                    <label for = "aptStatus">Delete Listing</label>
                </form>
            </td>
        </tr>
    </table>
</div>

<div>
    <h3>Manage People</h3>
    <form class = "filterCustomers">
    <input list="cust" name="cust" placeholder="Filter by Type of Customer">
    <datalist id="cust">
        <option value="Tenant"></option>
        <option value="Prospective"></option>
    </datalist>
    <button type="submit">Filter</button>
    </form>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Status</th>
            <th>Change Status</th>
        </tr>
        <tr>
            <td>John</td>
            <td>Smith</td>
            <td>Prospective</td>
            <td>
                <form class = "custStatus">
                    <input type="radio" name="custStatus" value="prospective" id = "prospective">
                    <label for = "aptStatus">Prospective</label></br>
                    <input type = "radio" name = "custStatus" value = "tenant" id = "tenant">
                    <label for = "aptStatus">Tenant</label>
                    <input type = "radio" name = "custStatus" value = "delete" id = "delete">
                    <label for = "aptStatus">Delete Account</label>
                </form>
            </td>
        </tr>
    </table>
</div>


