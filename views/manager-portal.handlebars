<div>
    <h1>Manager Portal</h1>
</div>

<h3 class="hideContentTxt" id="listingTxt">Manage Listings</h3>
<div class="hiddenContent" class="col-*-*" id="listingContent">
    <form id="filterListings">
        <input list="status" name="status" placeholder="Filter by Status">
        <datalist id="status">
            <option value="Available"></option>
            <option value="Unavailable"></option>
        </datalist>
        <button type="submit">Filter</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Apartment Number</th>
                <th>Rent</th>
                <th>Number of Bedrooms</th>
                <th>Number of Bathrooms</th>
                <th>Date Available</th>
                <th>Apartment Status</th>

            </tr>
        </thead>
        <tbody id="allApts">
            {{#each apartments}}
            <tr id="{{aptID}}">
                <form class="saveApt">
                    <td>
                        <input type="hidden" value="{{aptID}}" name="aptID">
                        <input type="number" value="{{aptNumber}}" name="aptNumber" min = "1" max= "9999">
                    </td>
                    <td><input type="number" value="{{rent}}" name="rent" min = "1" max= "9999"></td>
                    <td><input type="number" value="{{numBeds}}" name="numBeds" min = "0" max= "10"></td>
                    <td><input type="number" value="{{numBaths}}" name="numBaths" min = "1" max= "10"></td>
                    <td><input type="date" value="{{dateAvailable}}" name="dateAvailable"></td>
                    <td><input type="text" value="{{availabilityStatus}}" name="availabilityStatus"></td>
                    <td><button type="submit" value="save" class="saveApt"><img src="/icons/save.png" height="24" width="24"></button></td>
                </form>
                <td>
                    <button type="submit" value="delete" class="deleteApt"><img src="/icons/delete.png" height="24" width="24"></button>
                </td>
            </tr>
            {{/each}}

        </tbody>
        <tr>
            {{!-- <td><a href="/new-listing">Add Listing</a></td> --}}
            <td><button class="newApt">New Listing</button></td>
        </tr>
    </table>
</div>

<h3 class="hideContentTxt" id="amenTxt">Manage Amenities</h3>
<div class="hiddenContent" class="col-*-*" id="amenContent">
        <table>
            <thead>
                <tr>
                    <th>Amenity Description</th>
                </tr>
            </thead>
            <tbody id="allAmenities">
                {{#each amenities}}
                <tr id="{{amenID}}">
                    <form class="saveAmenity">
                        <td>
                        <input type="hidden" value="{{amenID}}" name="amenID">
                        <input type="text" value="{{amenDescription}}" name="amenDescription">
                        </td>
                        <td><button type="submit" class="save"><img src="/icons/save.png" height="24" width="24"></button></td>
                    </form>
                    <td><button class="deleteAmenity" type="submit"><img src="/icons/delete.png" height="24" width="24"></button></td>
                </tr>
                {{/each}}
            </tbody>
            <tr>
                <td><button class="newAmenity">New Amenity</button></td>
            </tr>
        </table>
