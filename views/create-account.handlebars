<link rel = "stylesheet" href="/css/create-account.css" type = "text/css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src = "/js/create-account.js"></script>
<div>
    <h1>{{mainMessage}}</h1>
</div>

<div>
    <form id = "createAccount" action = "/create-account" method = "post">
        <p>First Name:
            <input type="text" name="firstName" maxlength = "30">
        </p>
        <p>Last Name:
            <input type="text" name="lastName" maxlength = "30">
        </p>
        <p>Email:
            <input type ="email" name="email">
        </p>
        <p>Phone:
            <input type = "tel" name = "phone">
        </p>
        <p>Best way to contact you?
            <input type = "radio" name = "contact" value = "email">
            <label for = "contact">Email</label>
            <input type = "radio" name = "contact" value = "phone">
            <label for = "contact">Phone</label>
        </p>
        <p>Would you like to create an account?
            <input type = "radio" name = "account" value = "yes" onclick = "showAccountCreation();">
            <label for = "account">Yes</label>
            <input type = "radio" name = "account" value = "no" onclick = "hideAccountCreation();">
            <label for = "account">No</label>

            <div id = "reveal-if-yes">
                <h6>Create Account:</h6>
                <label for = "username">Username:</label>
                <input type = "text" name = "username" maxlength = "16">
                <label for = "password">Choose Password:</label>
                <input type = "password" name = "password" maxlength = "16">
                <label for = "password">Confirm Password:</label>
                <input type = "password" name = "password2" maxlength = "16">
            </div>
        </p>
        <input type = "submit" value = "Submit">
    </form>
</div>